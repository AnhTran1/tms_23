<% provide(:title, "New Subject") %>
<h1>Create New Subject</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @subject, url: supervisors_subjects_path do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <p>
        <%= f.text_field :name, placeholder: "Name" %>
        <%= f.text_area :description, placeholder: "Description" %>
      </p>
      <h2>Add tasks</h2>
      <p><%= creat_add_task_button f, :tasks %></p>
      <p><%= f.submit "Save", class: "btn btn-large btn-primary" %></p>
    <% end %>
  </div>
</div>